<Window x:Class="StockTill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockTill"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        mc:Ignorable="d"
        Title="StockTill" Height="700" Width="1100"
        WindowState="Maximized">
    <ui:NavigationView x:Name="NavigationView_Root" IsPaneOpen="False" IsBackButtonVisible="Collapsed"
                       SelectionChanged="NavigationView_SelectionChanged">

        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem x:Name="NavigationViewItem_Till" Content="扫码出库">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.BarcodeScanner}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem x:Name="NavigationViewItem_Stock" Content="库存管理">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Library}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem x:Name="NavigationViewItem_Query" Content="统计查询">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.PieSingle}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

        </ui:NavigationView.MenuItems>
        
        <ui:NavigationView.FooterMenuItems>

            <ui:NavigationViewItem x:Name="NavigationViewItem_Developer" Content="开发者工具" Visibility="Hidden">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.DeveloperTools}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem x:Name="NavigationViewItem_Settings"  Content="设置">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Settings}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

        </ui:NavigationView.FooterMenuItems>
        
        <ui:Frame x:Name="RootFrame" />

    </ui:NavigationView>
</Window>
