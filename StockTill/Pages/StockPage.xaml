<ui:Page x:Class="StockTill.Pages.StockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockTill.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="库存管理">
    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Page.Resources>
    <Grid Margin="56,36,56,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <Button x:Name="AddButton" Click="AddButton_Click">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Add}" />
                    <TextBlock Text=" 新增商品" />
                </StackPanel>
            </Button>
            <Button x:Name="EditButton" IsEnabled="False" Click="EditButton_Click">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Edit}" />
                    <TextBlock Text=" 编辑选中" />
                </StackPanel>
            </Button>
            <Button x:Name="DeleteButton" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Delete}" />
                    <TextBlock Text=" 删除选中" />
                </StackPanel>
                <ui:FlyoutService.Flyout>
                    <ui:Flyout x:Name="DeleteFlyout" Placement="TopEdgeAlignedLeft">
                        <StackPanel>
                            <TextBlock Text="确认要删除选中的商品吗？其操作记录将被一并清空。" Margin="0,0,0,12" />
                            <Button Content="删除" Click="DeleteButton_Click" />
                        </StackPanel>
                    </ui:Flyout>
                </ui:FlyoutService.Flyout>
            </Button>
            <TextBox x:Name="SearchBox" ui:ControlHelper.PlaceholderText="搜索商品编号或商品名称…" Width="320" Height="32" Margin="0,0,8,0" Loaded="SearchBox_Loaded" TextChanged="SearchBox_TextChanged" />
            <TextBlock Text="{Binding CountText, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="StockGrid" IsReadOnly="True" Loaded="StockGrid_Loaded" SelectionChanged="StockGrid_SelectionChanged" />
    </Grid>
</ui:Page>
