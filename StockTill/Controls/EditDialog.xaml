<ui:ContentDialog x:Class="StockTill.Controls.EditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:controls="clr-namespace:StockTill.Controls"
    Title="编辑商品"
    d:DesignHeight="756" d:DesignWidth="548"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    PrimaryButtonText="完成"
    CloseButtonText="取消"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Margin="0,0,0,20">
            <Bold>提示：</Bold>商品编号无法被修改。<LineBreak/>
            对库存数量的修改也会被计为商品入库和出库。
        </TextBlock>
        <TextBox ui:ControlHelper.Header="商品名称" Text="{Binding name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,16" />
        <Grid Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox ui:ControlHelper.Header="商品分类" Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Categories, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="category" SelectedValuePath="category_id" SelectedValue="{Binding CategoryId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,16" />
            <ui:NumberBox Header="库存数量" Grid.Row="0" Grid.Column="1" Value="{Binding quantity, UpdateSourceTrigger=PropertyChanged}" Minimum="0" SpinButtonPlacementMode="Inline" Margin="12,0,0,16" />
            <ui:NumberBox Header="单件成本（元）" Grid.Row="1" Grid.Column="0" Value="{Binding cost, UpdateSourceTrigger=PropertyChanged}" Minimum="0" SpinButtonPlacementMode="Inline" Margin="0,0,12,0" />
            <ui:NumberBox Header="单件售价（元）" Grid.Row="1" Grid.Column="1" Value="{Binding price, UpdateSourceTrigger=PropertyChanged}" Minimum="0" SpinButtonPlacementMode="Inline" Margin="12,0,0,0" />
        </Grid>
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox ui:ControlHelper.Header="商品编号" Grid.Column="0" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,0,8,0" />
            <Button x:Name="SaveBarcodeButton" Grid.Column="1" Click="SaveBarcodeButton_Click" VerticalAlignment="Bottom" Width="120" Height="30">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Save}"/>
                    <TextBlock Text=" 保存条形码"/>
                </StackPanel>
            </Button>
        </Grid>
        <Image x:Name="BarcodeImage" Grid.Column="0" Width="360" Height="100" />
        <ui:ProgressBar x:Name="DialogProgress" IsIndeterminate="True" Visibility="Collapsed" Margin="0,24,0,0" />
    </StackPanel>
</ui:ContentDialog>